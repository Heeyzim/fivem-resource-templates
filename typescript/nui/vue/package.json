{
  "name": "res",
  "version": "1.0.0",
  "description": "<description>",
  "author": "<author>",
  "scripts": {
    "clean": "pnpm --recursive clean",
    "clean:all": "rm -rf node_modules && pnpm --recursive clean",
    "--------- BUILD ---------": "--------- BUILD ---------",
    "build:client": "pnpm --filter=client build",
    "build:server": "pnpm --filter=server build",
    "build:web": "pnpm --filter=web build",
    "build": "concurrently \"pnpm:build:*\"",
    "--------- WATCH ---------": "--------- WATCH ---------",
    "watch:client": "pnpm --filter=client watch",
    "watch:server": "pnpm --filter=server watch",
    "watch:web": "pnpm --filter=web dev:game",
    "watch": "concurrently \"pnpm:watch:*\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
